# Maintainer: xantares <xantares09 at hotmail dot com>

pkgname=('openturns')
pkgver=1.3rc1
pkgrel=1
pkgdesc="Uncertainty treatment library in C++/Python"
license=('LGPL3')
arch=('i686' 'x86_64')
url="http://www.openturns.org/"
depends=('lapack' 'libxml2' 'muparser' 'intel-tbb' 'python')
optdepends=('r: plotting and statistical tests'
            'python-matplotlib: nicer plotting')
makedepends=('r' 'python' 'cmake' 'gcc' 'gcc-fortran' 'bison' 'flex' 'swig')
source=("http://downloads.sourceforge.net/sourceforge/openturns/openturns/openturns-$pkgver.tar.bz2")
md5sums=('e1e28248b7027a6e9ff99fc8d8de4363')

prepare() {
  cd $pkgname-$pkgver
}

build() {
  cd $pkgname-$pkgver
  2to3 -w python/test/t_*.py
  R CMD INSTALL --library=$PWD utils/rot_1.4.5.tar.gz
  export R_LIBS=$PWD
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DOPENTURNS_SYSCONFIG_PATH=/etc \
        -DSYSTEM_INSTALL=ON .
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
}

package() {
  cd $pkgname-$pkgver
  mkdir -p "$pkgdir"/usr/lib/R/library/
  cp -r rot "$pkgdir"/usr/lib/R/library/
  make DESTDIR="$pkgdir" install
}

