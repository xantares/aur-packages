# Maintainer: xantares <xantares09 at hotmail dot com>

pkgname=psp-bzip2
pkgver=1.0.4
pkgrel=1
pkgdesc="A high-quality data compression program (psp)"
arch=(any)
url="http://sources.redhat.com/bzip2"
license=('custom')
groups=('psp')
depends=('psp-sdk')
makedepends=('psp-gcc')
options=('!buildflags' '!strip' 'staticlibs')
source=("git+https://github.com/pspdev/psp-ports.git")
md5sums=('SKIP')

build()
{
  cd "$srcdir/psp-ports/bzip2"
  make
}

package()
{
  cd "$srcdir/psp-ports/bzip2"
  make install PREFIX="$pkgdir"/usr/psp
}

