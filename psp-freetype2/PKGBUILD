# Maintainer: xantares <xantares09 at hotmail dot com>

pkgname=psp-freetype2
pkgver=2.1.10
pkgrel=1
pkgdesc="TrueType font rendering library (psp)"
arch=(any)
url="http://freetype.sourceforge.net"
license=('GPL')
groups=('psp')
depends=('psp-sdk')
makedepends=('psp-gcc')
options=('!buildflags' '!strip' 'staticlibs')
source=("git+https://github.com/pspdev/psp-ports.git")
md5sums=('SKIP')


prepare()
{
  cd "$srcdir/psp-ports"
}

build()
{
  cd "$srcdir/psp-ports/freetype"
  sh autogen.sh
  mkdir -p build-psp && pushd build-psp
  ../configure --prefix=/usr/psp --host=psp
  make
}

package()
{
  cd "$srcdir/psp-ports/freetype/build-psp"
  make install DESTDIR="$pkgdir"
}

