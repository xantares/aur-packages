# Maintainer: xantares <xantares09 at hotmail dot com>

pkgname=psp-pspgl
pkgver=0.2
pkgrel=1
pkgdesc="hardware-accelerated implementation of OpenGL for the Playstation Portable (psp)"
arch=(any)
url="http://www.goop.org/psp/gl/"
license=('GPL')
groups=('psp')
depends=('psp-sdk')
makedepends=('psp-gcc')
options=('!buildflags' '!strip' 'staticlibs')
source=("git+https://github.com/pspdev/psp-ports.git" psp-ports-destdir.patch)
md5sums=('SKIP' 'SKIP')


prepare()
{
  cd "$srcdir/psp-ports"
  patch -p1 -i ../psp-ports-destdir.patch
}

build()
{
  cd "$srcdir/psp-ports/pspgl"
  make
}

package()
{
  cd "$srcdir/psp-ports/pspgl"
  make install DESTDIR="$pkgdir"
}

