pkgname=mixmod
pkgver=2.3.0
pkgrel=2
pkgdesc="Model-Based supervised and unsupervised classification on qualitative and quantitative data."
arch=(i686 x86_64)
url="http://www.mixmod.org"
license=(GPL)
depends=('gcc-libs')
makedepends=('cmake' 'gcc')
source=("http://www.mixmod.org/IMG/tgz/mixmod_2-3-0_src.tgz")
md5sums=('0444990cdefc73cf9ed4b5e229fc3017')

build () {
  sed -i "/CMAKE_INSTALL_PREFIX/d" CMakeLists.txt
  sed -i "/SUBDIR_LIB_INSTALL/d" CMakeLists.txt
  sed -i "/CMAKE_INSTALL_RPATH/d" CMakeLists.txt
  cd BUILD
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
  ..
  make
}

package () {
  cd "$srcdir/BUILD"
  make install DESTDIR="$pkgdir"
}
