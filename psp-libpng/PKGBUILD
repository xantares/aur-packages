# Maintainer: xantares <xantares09 at hotmail dot com>

pkgname=psp-libpng
pkgver=1.5.7
pkgrel=1
pkgdesc="PNG reference library (psp)"
arch=(any)
url="http://www.libpng.org"
license=('GPL')
groups=('psp')
depends=('psp-sdk' 'psp-zlib')
makedepends=('psp-gcc')
options=('!buildflags' '!strip' 'staticlibs')
source=("git+https://github.com/pspdev/psp-ports.git" psp-ports-destdir.patch)
md5sums=('SKIP' 'SKIP')


prepare()
{
  cd "$srcdir/psp-ports"
  patch -p1 -i ../psp-ports-destdir.patch
}

build()
{
  cd "$srcdir/psp-ports/libpng"
  make
}

package()
{
  cd "$srcdir/psp-ports/libpng"
  make install DESTDIR="$pkgdir"
}

