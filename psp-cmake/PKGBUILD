pkgname=psp-cmake
pkgver=0.1
pkgrel=1
arch=(any)
pkgdesc="CMake wrapper for PSP (psp)"
groups=('psp')
depends=('cmake' 'psp-gcc')
license=("GPL")
url="https://github.com/pspdev/psplibraries/"
source=("psp-cmake"
        "https://raw.githubusercontent.com/pspdev/psplibraries/master/patches/PSP.cmake")
md5sums=('SKIP'
         'SKIP')

package() {
  cd "$pkgdir"

  install -d "${pkgdir}"/usr/bin
  install -m 755 "${srcdir}"/psp-cmake "${pkgdir}"/usr/bin/

  install -d "${pkgdir}"/usr/share/psp/
  install -m 644 "${srcdir}"/PSP.cmake "${pkgdir}"/usr/share/psp/toolchain-psp.cmake
}
