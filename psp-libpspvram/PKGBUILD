# Maintainer: xantares <xantares09 at hotmail dot com>

pkgname=psp-libpspvram
pkgver=0.0.1
pkgrel=1
pkgdesc="A high-quality MPEG audio decoder (psp)"
arch=(any)
url="https://github.com/pspdev/psp-ports"
license=('GPL')
groups=('psp')
depends=('psp-sdk')
makedepends=('psp-gcc')
options=('!buildflags' '!strip' 'staticlibs')
source=("git+https://github.com/pspdev/psp-ports.git" psp-ports-destdir.patch)
md5sums=('SKIP' 'SKIP')


prepare()
{
  cd "$srcdir/psp-ports"
  patch -p1 -i ../psp-ports-destdir.patch
}

build()
{
  cd "$srcdir/psp-ports/libpspvram"
  make
}

package()
{
  cd "$srcdir/psp-ports/libpspvram"
  make install DESTDIR="$pkgdir"
}

